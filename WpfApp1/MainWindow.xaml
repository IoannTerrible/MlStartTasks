<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="930">
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FFFFEDED"/>
        <SolidColorBrush x:Key="ButtonColor" Color="Black"/>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="447*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>

        <Button Name="button" Click="button_Click" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="12,19,0,0">Click Me!</Button>
    </Grid>
</Window>
